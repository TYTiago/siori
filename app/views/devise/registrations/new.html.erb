<%= render "users/user_login" %> 
<div class="user-color">
<div class="user-new">
<div class="user-container">
<h1 class="font-login">新規登録</h1>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%= render 'devise/shared/error_messages', model: f.object %> 

  <div class="field">
    <%= f.label :nickname, class:"user-title" %><br />
    <%= f.text_field :nickname, autofocus: true, class: "user-write" %>
  </div>

  <div class="field">
    <%= f.label :email, class:"user-title" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-write" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"user-title" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "user-write"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"user-title" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-write"%>
  </div>

  <div class="actions">
    <%= f.submit "アカウント作成", class:"user-btn" %>
  </div>
<% end %>

 <%# <%= render "devise/shared/links" %>  
</div>
</div>
</div>

