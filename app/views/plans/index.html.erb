<%= render "users/user_login" %> 
<%= form_with(url: search_plans_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>

<%= month_calendar events: @plans do |date, plans| %>
     <%= date.day %>
     <% plans.each do |plan| %>
     <ul>
         <%= link_to plan.title, plan_path(plan.id), method: :get, class: 'date-title' %> 
     </ul>
     <% end %>
   <% end %>  
   
